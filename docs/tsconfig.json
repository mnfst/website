{
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "node", // Ensures aliases are correctly resolved
    "allowJs": true, // Allows importing JavaScript files if needed
    "resolveJsonModule": true, // Enables importing JSON files
    "noEmit": true // Prevents TypeScript from emitting compiled files
  }
}
